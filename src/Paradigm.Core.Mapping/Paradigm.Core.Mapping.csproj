<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <Copyright>Miracle Devs</Copyright>
        <PackageProjectUrl>http://www.miracledevs.com</PackageProjectUrl>
        <Description>Framework wrapper around mapping libraries. The library allows to change mappers without affecting the code.</Description>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>Miracle Devs</Authors>
        <Company>Miracle Devs</Company>
       <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Product>Paradigm Framework</Product>
        <RepositoryUrl>https://github.com/MiracleDevs/Paradigm.Core.git</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageIcon>icon.png</PackageIcon>
        <Version>3.0.0</Version>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="AutoMapper" Version="11.0.1" />
        <None Include="icon.png" Pack="true" PackagePath="" />
    </ItemGroup>
</Project>
